---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, img } = Astro.props;
---

<li
	class="link-card rounded-md bg-indigo-950/50 border border-indigo-400/50 text-white"
>
	<a href={href} class="block py-4 px-6">
		<div class="-mt-12 mb-10 w-40 mx-auto">
			<img src={img} alt={title} class="object-contain w-40 h-40" />
		</div>

		<h2 class="font-semibold text-xl mb-4">
			{title}
			<span>&rarr;</span>
		</h2>
		<div class="text-lg opacity-80">
			<slot />
		</div>
	</a>
</li>
